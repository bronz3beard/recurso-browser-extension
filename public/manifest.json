{
  "manifest_version": 3,
  "name": "Recurso Web Extension",
  "version": "1.1.0",
  "description": "A simple chrome extension for saving items to recurso.tech with Vite, React, TypeScript and TailwindCSS.",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "background": {
    "service_worker": "src/pages/background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": "images/icon-48.png"
  },
  "chrome_url_overrides": {},
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.js"
      ],
      "css": [
        "contentStyle.css"
      ]
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "images/icon-128.png",
        "images/icon-48.png"
      ],
      "matches": []
    }
  ]
}